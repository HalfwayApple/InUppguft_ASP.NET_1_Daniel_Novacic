@model WebApp.Models.ShowcaseModel

@if (Model != null)
{
    <section class="showcase">
        <div class="container">
            <div class="content">
                <div class="title-1">@Model.Ingress</div>
                <div class="title-2">@Model.Title</div>
                <button class="btn-theme">@Model.ButtonText</button>
            </div>
            <div class="content-image">
                <img src="@Model.ImageUrl" alt="@Model.Title">
            </div>
        </div>
    </section>
}

