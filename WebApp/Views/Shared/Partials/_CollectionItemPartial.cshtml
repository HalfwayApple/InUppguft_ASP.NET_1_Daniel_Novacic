@model WebApp.Models.CollectionItemModel

<!-- collection-item start -->
<a asp-controller="Products" asp-action="Details" asp-route-id="@Model.Id" class="item">

    <div class="image-section">
		<img src="@Model.ImageUrl" alt="@Model.Title">
    </div>
    
    <div class="body-section">
        <div class="body-section">
            <div class="title">@Model.Title</div>
            <div class="price">$@Model.Price</div>
            <p>Star rating</p>
        </div>
        <i class="tocart fa-regular fa-cart-plus"></i>
    </div>
</a>
<!-- collection-item end -->