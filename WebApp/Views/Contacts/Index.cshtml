@{ ViewData["Title"] = "Fixxo. - Contact"; }
@model WebApp.Models.Forms.ContactForm


<div class="map-section">
	<iframe src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d16277.682541772614!2d18.061274013085967!3d59.33779007454858!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1ssv!2sse!4v1682236425177!5m2!1ssv!2sse" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
</div>
<div class="container mt-5">
	<h2 class="text-center mb-5">Kontakta oss!</h2>
	<form method="post" asp-action="Index" novalidate>
		<div class="row mb-3">
			<div class="col">
				<input asp-for="Name" type="text" placeholder="Namn" class="form-control" />
				<span class="text-danger" asp-validation-for="Name"></span>
			</div>
			<div class="col">
				<input asp-for="Email" type="email" placeholder="E-postadress" class="form-control" />
				<span class="text-danger" asp-validation-for="Email"></span>
			</div>
		</div>
		<div class="row">
			<textarea asp-for="Comment" placeholder="Fråga/Kommentar" class="form-control" rows="5"></textarea>
			<span class="text-danger" asp-validation-for="Comment"></span>
		</div>

		<div class="row">
			<div class="col">
				<button type="submit" class="btn-theme mt-4 mb-5">Skicka</button>
			</div>
		</div>
	</form>
</div>